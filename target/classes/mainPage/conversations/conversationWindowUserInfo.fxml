<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<HBox styleClass="primaryBg" alignment="CENTER_LEFT" prefHeight="116.0" prefWidth="805.0" spacing="30.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.Conversation.ConversationWindowUserInfoController">
   <children>
      <ImageView fx:id="image" fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="2.0" left="25.0" right="2.0" top="2.0" />
         </HBox.margin></ImageView>
      <VBox styleClass="primaryBg" alignment="CENTER_LEFT" prefHeight="116.0" prefWidth="608.0">
         <children>
            <HBox styleClass="primaryBg" alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="483.0">
               <children>
                  <TextFlow fx:id="nameBox" prefHeight="65.0" prefWidth="604.0">
                     <children>
                        <Label styleClass="basicText" fx:id="conversationWindowName" maxWidth="300.0" prefHeight="28.0" text="name">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <Label styleClass="basicText2" fx:id="conversationWindowJobTitle" maxWidth="300.0" prefHeight="27.0" text="title">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </TextFlow>
               </children>
            </HBox>
            <Label styleClass="basicText" fx:id="bio" prefHeight="17.0" prefWidth="455.0" text="bio">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="454.0" spacing="5.0">
               <children>
                  <Circle fx:id="conversationWindowStatusIndicator" fill="DODGERBLUE" radius="6.0" stroke="BLACK" strokeType="INSIDE" />
                  <Label styleClass="basicText2" fx:id="conversationWindowStatusText" text="Label" />
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
